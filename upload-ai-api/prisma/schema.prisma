// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// settando a tabela de video e prompt que v√£o receber os videos e valores de prompt por parte do usuario
model Video {
  // PK
  id         String   @id @default(uuid())
  name       String
  path       String
  transcript String?
  createdAt  DateTime @default(now())
}

model Prompt {
  // PK
  id       String @id @default(uuid())
  title    String
  template String
}
